/**index.wxss**/
page {
  width: 100%;
  height: 100%;
  position: relative;
} 
.bg {
   height: 100%;  
   margin: 0;
 }  

.container {
  width: 100%;
  height: 70px;
  margin: 0;
  padding: 0;
  background-color: #920000;
}
input{
  position: absolute;
  top: 35rpx;
  left: 30rpx; 
  border: 1px solid #fff;
  background-color: rgb(255, 229, 168);  
  opacity: 0.5;
  border-radius: 10rpx;
  width: 70%;
  height: 33px;
  padding-left: 5rpx;
}
button{
  position: absolute;
  top: 35rpx;
  left: 560rpx;
  background-color: #ec9d9d;
  color: #fff;
  margin-left: 5%;
  height: 33px;
  line-height: 33px;
  text-align: center;
  font-size: 14px;
}
.message {
  text-align: center;
  color: #ccc;
}
.searchLoadingComplete {
  text-align: center;
  color: #ccc;
  margin-top: 4rpx;
}
.box {
  width: 90%;
  text-align: center;
  margin: 0 auto;
  padding: 5% 5%; 
  border-top: 1px dashed #ccc;
  border-bottom: 1px dashed #ccc;
  margin-bottom: 10rpx;
}
image {
  width: 100%;
  margin: 5rpx 0;
}
.imtro {
  margin-top: 5rpx;
  text-align: left;
  font-size: 13rpx;
  line-height: 19rpx;
}
.imtro .jj {
  font-weight: 700;
}